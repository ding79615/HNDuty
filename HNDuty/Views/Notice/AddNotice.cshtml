
@{
    ViewBag.Title = "AddNotice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>新增公告</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form>
            <div class="form-group">
                <label for="NoticeTopic">公告標題</label>
                <input type="text" class="form-control" style="min-width: 100%" id="NoticeTopic" placeholder="請輸入公告標題" />
            </div>
            <div class="form-group">
                <label for="NoticeContent">公告內文</label>
                <textarea class="form-control" id="NoticeContent" rows="10" style="min-width: 100%"></textarea>
            </div>
            <div class="form-group">
                <label for="NoticeDate">公告日期</label>
                <input type="text" class="form-control" id="NoticeDate"/>
            </div>
            <div class="form-group">
                <label for="Status">發布狀態</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Status" id="Status0" value="0" />
                    <label class="form-check-label" for="Status0">未發布</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Status" id="Status1" value="1" />
                    <label class="form-check-label" for="Status1">發布</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-info" value="發布公告" />
            </div>
        </form>
    </div>
</div>


